@model Forums.ViewModels.Forum.ForumIndexModel

<h1>Forums</h1>

<table class="table table-hover" id="forumIndexTable">
    <tbody>
        @foreach (var forum in Model.ForumList)
        {
            <tr>
                <td>
                    <a asp-controller="Forum" asp-action="Topic" asp-route-id="@forum.Id">
                        @forum.Title
                    </a>                    
                </td>
                <td>
                    @forum.Description
                </td>
            </tr>
        }
    </tbody>
</table>
